<% if(errors.length > 0)  { %>

<div class="row">
    <div class="col-md-10 mx-auto">
        <div class="alert alert-danger">
            <% errors.forEach(error => { %>
               <%= error %> <br> 
            <% }); %>
        </div>
    </div>
</div>  

<% } %>

<% if(success.length > 0)  { %>

    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="alert alert-success">
                <% success.forEach(msg => { %>
                   <%= msg %> <br> 
                <% }); %>
            </div>
        </div>
    </div>  
    
    <% } %>